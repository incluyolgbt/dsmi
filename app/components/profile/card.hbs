<div
  class="card"
  local-class="{{(this.getCardClass @profile.profilePicture)}}"
  style="width: {{@width}}"
>

  {{#if @profile.profilePicture}}
    <img
      src="{{@profile.profilePicture}}"
      alt="..."
      local-class="profile-picture"
    />
  {{/if}}

  <div
    class="card-body"
    local-class="{{(this.getCardBodyClass @profile.profilePicture)}}"
  >
    <div class="container">

      <h1 class="card-title" local-class="card-title">
        {{@profile.firstName}}
        {{#if @profile.lastName}}
          {{@profile.lastName}}
        {{/if}}
        {{#if @profile.pronouns}}
          <i>({{@profile.pronouns}})</i>
        {{/if}}
      </h1>

      <div local-class="social-media">
        <Profile::SocialMedia @socialMedia={{@socialMedia}} />
      </div>

      <div class="row" local-class="content-row">
        <div class="col-sm-5">
          <h3>Acerca de {{@profile.name}}</h3>
          <b>üìç Ubicaci√≥n:</b>
          <p>{{@location.city}}, {{@location.country}}</p>
          <b>üîç Enfoque:</b>
          <ul>
            {{#each @focusAreas as |item|}}
              <li local-class="tag">{{item.name}}</li>
            {{/each}}
          </ul>
          <b>ü§ù Oferta:</b>
          <ul>
            {{#each @appointmentTypes as |item|}}
              <li>
                {{item.name}}:
                {{#if (eq item.priceMin item.priceMax)}}
                  ${{item.priceMin}}
                {{else}}
                  ${{item.priceMin}}-{{item.priceMax}}
                {{/if}}
                MXN
              </li>
            {{/each}}
          </ul>
          <b>üí° Modalidades:</b>
          <ul>
            {{#each @profile.modalities as |item|}}
              <li>{{item}}</li>
            {{/each}}
          </ul>
          <b>‚úÖ C√©dula Profesional:</b>
          <p>{{@profile.governmentID}}</p>
          <b>üè≥Ô∏è‚Äçüåà Relaci√≥n con la comunidad:</b>
          {{#if @profile.communityAffiliation}}
            <p>Se identifica c√≥mo LGBTQ+</p>
          {{else}}
            <p>Se identifica c√≥mo aliade</p>
          {{/if}}
        </div>

        <div class="col-sm-7">
          <h3>Semblanza</h3>
          <p class="card-text">{{@profile.bio}}</p>
          <b>Contacta a {{@profile.name}}</b>
          <p>
            üìû
            {{@profile.phoneNumber}}
            <br />
            üì¨
            {{@profile.email}}
            <br />
            {{#if @profile.whatsApp}}
              üí¨
              <a
                href="https://wa.me/{{@profile.whatsApp}}"
                target="_blank"
                rel="noopener noreferrer"
              >
                WhatsApp
              </a>
            {{/if}}

          </p>
        </div>

      </div>
    </div>
  </div>
</div>