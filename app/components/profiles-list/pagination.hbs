<div>
  {{#if (not-eq @currentPage 1)}}
    <button class="btn btn-primary btn-circled" type="button" {{on "click" @prevPage}}>
      Anterior
    </button>
  {{/if}}

  {{#if (eq @resultsInPage 2)}}
    <button class="btn btn-primary btn-circled" type="button" {{on "click" @nextPage}}>
      Siguiente
    </button>
  {{/if}}

</div>